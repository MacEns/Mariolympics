@inject PersonRepository PersonRepository

@* Player Selection Component *@

<div class="player-selection-container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Select Tournament Players</h3>
            <p class="mb-0">Choose which players will participate in the tournament (minimum 2 players)</p>
        </div>
        <div class="card-body">
            @if (showAddPersonForm)
            {
                <div class="card mb-3 add-person-card">
                    <div class="card-body">
                        <h5 class="card-title">Add New Person</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">First Name</label>
                                <input type="text" class="form-control" @bind="newPerson.FirstName" placeholder="Enter first name" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Last Name</label>
                                <input type="text" class="form-control" @bind="newPerson.LastName" placeholder="Enter last name" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email (Optional)</label>
                                <input type="email" class="form-control" @bind="newPerson.Email" placeholder="Enter email" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Phone (Optional)</label>
                                <input type="tel" class="form-control" @bind="newPerson.Phone" placeholder="Enter phone" />
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" @onclick="SaveNewPerson" disabled="@(string.IsNullOrWhiteSpace(newPerson.FirstName) || string.IsNullOrWhiteSpace(newPerson.LastName))">
                                    Save Person
                                </button>
                                @if (!string.IsNullOrWhiteSpace(saveMessage))
                                {
                                    <span class="ms-2 @(saveSuccess ? "text-success" : "text-danger")">@saveMessage</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            <div class="d-flex flex-row gap-2 mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                        </svg>
                    </span>
                    <input type="text" class="form-control" placeholder="Search by name..." @bind="searchQuery" @bind:event="oninput" />
                    @if (!string.IsNullOrWhiteSpace(searchQuery))
                    {
                        <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                            </svg>
                        </button>
                    }
                </div>

                <button class="btn btn-success" style="width: 100px" @onclick="ToggleAddPersonForm">
                    @(showAddPersonForm ? "Cancel" : "Add New")
                </button>
            </div>
            
            <div class="player-selection-grid">
                @if (AllPersons != null)
                {
                    @foreach (var person in FilteredPersons)
                    {
                        var isSelected = SelectedPersons.Contains(person);
                        <div class="person-card @(isSelected ? "selected" : "")" @onclick="() => TogglePersonSelection(person)">
                            <div class="person-name">@person.FullName</div>
                            @if (isSelected)
                            {
                                <span class="checkmark">âœ“</span>
                            }
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public List<Person> AllPersons { get; set; }
    
    [Parameter]
    public List<Person> SelectedPersons { get; set; } = new();
    
    [Parameter]
    public EventCallback<List<Person>> OnSelectionChanged { get; set; }
    
    [Parameter]
    public EventCallback OnPersonAdded { get; set; }
    
    private bool showAddPersonForm = false;
    private Person newPerson = new();
    private string saveMessage = "";
    private bool saveSuccess = false;
    private string searchQuery = "";
    
    private IEnumerable<Person> FilteredPersons
    {
        get
        {
            if (AllPersons == null)
                return Enumerable.Empty<Person>();
                
            if (string.IsNullOrWhiteSpace(searchQuery))
                return AllPersons;
                
            return AllPersons.Where(p => 
                p.FullName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                (p.FirstName?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (p.LastName?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false)
            );
        }
    }
    
    private void ClearSearch()
    {
        searchQuery = "";
    }
    
    private void TogglePersonSelection(Person person)
    {
        if (SelectedPersons.Contains(person))
        {
            SelectedPersons.Remove(person);
        }
        else
        {
            SelectedPersons.Add(person);
        }
        
        OnSelectionChanged.InvokeAsync(SelectedPersons);
    }
    
    private void ToggleAddPersonForm()
    {
        showAddPersonForm = !showAddPersonForm;
        if (showAddPersonForm)
        {
            newPerson = new Person();
            saveMessage = "";
        }
    }
    
    private async Task SaveNewPerson()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(newPerson.FirstName) || string.IsNullOrWhiteSpace(newPerson.LastName))
            {
                saveMessage = "First name and last name are required.";
                saveSuccess = false;
                return;
            }
            
            await PersonRepository.AddPersonAsync(newPerson);
            
            // Add to the list
            AllPersons.Add(newPerson);
            
            saveMessage = $"{newPerson.FullName} added successfully!";
            saveSuccess = true;
            
            // Reset form after a delay
            await Task.Delay(1500);
            showAddPersonForm = false;
            newPerson = new Person();
            saveMessage = "";
            
            // Notify parent that a person was added
            await OnPersonAdded.InvokeAsync();
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            saveMessage = $"Error: {ex.Message}";
            saveSuccess = false;
        }
    }
}
